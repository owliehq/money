{
  "name": "@owliehq/money",
  "version": "1.0.0",
  "description": "Helper about money like VAT management",
  "homepage": "https://github.com/owliehq/money/tree/master/packages/api",
  "keywords": [],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "typings": "dist/types/src/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "HEN Xavier",
  "bugs": {
    "url": "https://github.com/owliehq/money/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/owliehq/money.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "eslint --fix --ext .js,.ts src",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --coverage --runInBand",
    "test:nocoverage": "jest --runInBand",
    "test:watch": "jest --runInBand --watch",
    "test:prod": "npm run lint && npm run test:nocoverage -- --no-cache",
    "test:local": "jest --coverage --runInBand",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "semantic-release": "semantic-release"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-typescript": "^2.1.0",
    "@types/jest": "^23.3.14",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "firebase-functions-test": "^0.2.0",
    "jest": "^25.1.0",
    "jest-config": "^25.1.0",
    "prettier": "^2.1.2",
    "rollup-plugin-typescript": "^1.0.1",
    "typescript": "^3.8.0"
  }
}
